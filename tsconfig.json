{
  "compilerOptions": {
    "baseUrl": "./",
    "keyofStringsOnly": true,
    "target": "es2017",
    "downlevelIteration": true,
    "module": "esnext",
    "jsx": "preserve",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2017"],
    "moduleResolution": "node",
    "isolatedModules": true,
    "stripInternal": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
